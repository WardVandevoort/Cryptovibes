//doctype html
//head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='/stylesheets/style.css')
  title Cryptovibes Sign Up
//.main
  section.signup
    .container
      .signup-content
          h2 Register for an account
          p.emailValidation.err.hidden You need to sign up with a valid student email. A valid student email ends with "@student.thomasmore.be".
          p.passwordValidation.err.hidden The passwords are not the same.
          p.fieldValidation.err.hidden All fields need to be filled in.
          div
            label(for='firstname') Firstname
            input#firstname(type='text' name='firstname' placeholder='John')
          div
            label(for='lastname') Lastname
            input#lastname(type='text' name='lastname' placeholder='Doe')
          div
            label(for='email') Email
            input#email(type='email' name='email' placeholder='john.doe@student.thomasmore.be')
          div
            label(for='password') Password
            input#password(type='password' name='password' placeholder='*******')
            span.zmdi.zmdi-eye.field-icon.toggle-password(toggle='#password')
          div
            label(for='re_password') Confirm password
            input#re_password(type='password' name='re_password' placeholder='*******')
          div
            button#submit Register
      p.loginhere
          | Already have an account ? 
          a.loginhere-link(href='https://cryptovibes.herokuapp.com/users/login') Login here

